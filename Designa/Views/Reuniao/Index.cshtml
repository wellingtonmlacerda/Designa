@model IEnumerable<Designa.Models.Reuniao>

@{
    ViewData["Title"] = "Reuniões";
    int cont = 0;
}

<h1>Reuniões</h1>

@foreach (var item in Model)
{
    <div class="container mt-8">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1>Semana</h1>

                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <p>@Html.DisplayFor(modelItem => item.Semana)</p>
                        @* <h2>Programação da Reunião de Meio da Semana</h2> *@
                    </div>
                    <div class="card-body">
                        @{
                            cont = 0; // Reseta o contador
                        }
                        @foreach (var parte in item.Partes)
                        {
                            if (parte.Numero == 0)
                                cont++;
                            <div class="row">
                                <div class="col-12">
                                    @if (parte.Numero == 0 && cont == 1)
                                    {
                                        <div class="icon-gema float-sm-start me-3 mb-2"></div>
                                    }
                                    else if (parte.Numero == 0 && cont == 2)
                                    {
                                        <div class="icon-cevada float-sm-start me-3 mb-2"></div>
                                    }
                                    else if (parte.Numero == 0 && cont == 3)
                                    {
                                        <div class="icon-ovelha float-sm-start me-3 mb-2"></div>
                                    }
                                    <h4 class="@(cont == 1 ? "txt-color-teal" : cont == 2  ? "txt-color-gold" : "txt-color-maroon")">
                                        @(parte.Numero != 0 ? $"{parte.Numero}." : "") 
                                        @parte.Titulo
                                        @(parte.Numero != 0 ? $"({parte.Minutos} min)" : "")
                                    </h4>
                                </div>
                            </div>
                            if (parte.Numero != 0)
                            {
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <input type="text" class="form-control" id="txtPublicador" autocomplete="off" placeholder="Nome publicador">
                                    </div>
                                    <div class="col-6">
                                        <input type="text" class="form-control" id="txtAjudante" autocomplete="off" placeholder="Nome ajudante">
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
